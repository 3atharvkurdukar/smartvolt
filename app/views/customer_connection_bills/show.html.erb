<div class="row">
  <div class="col">
    <div class="card aos-init aos-animate" data-aos="fade-up" data-aos-delay="800">
      <div class="card-header">
        <h4 class="card-title">Bill Details</h4>
      </div>
      <div class="card-body">
      <div class="mb-3">
        <label class="text-muted fw-bold">Meter Reading</label>
        <p class="text-dark"><%= image_tag @bill.image %></p>
      </div>
      <div class="mb-3">
        <label class="text-muted fw-bold">Billing Date</label>
        <p class="text-dark"><%= @bill.updated_at.to_date %></p>
      </div>
      <div class="mb-3">
        <label class="text-muted fw-bold">Previous Reading</label>
        <p class="text-dark"><%= @bill.prev_reading %></p>
      </div>
      <div class="mb-3">
        <label class="text-muted fw-bold">Current Reading</label>
        <p class="text-dark"><%= @bill.curr_reading %></p>
      </div>
      <div class="mb-3">
        <label class="text-muted fw-bold">Unit Consumption</label>
        <p class="text-dark"><%= @bill.units %></p>
      </div>
      <div class="mb-3">
        <label class="text-muted fw-bold">Consumption Rate</label>
        <p class="text-dark">â‚¹<%= connection.rate %>/unit</p>
      </div>
      <div class="mb-3">
        <label class="text-muted fw-bold">Payable Amount</label>
        <p class="text-dark"><%= @bill.amount %></p>
      </div>
      </div>
    </div>
  </div>
  </div>
</div>
