<% if flash[:success] %>
  <div class="alert alert-success mt-4" role="alert">
    <%= flash[:success] %>
  </div>
<% end %>
<% if flash[:info] %>
  <div class="alert alert-info mt-4" role="alert">
    <%= flash[:info] %>
  </div>
<% end %>
<% if flash[:warning] %>
  <div class="alert alert-warning mt-4" role="alert">
    <%= flash[:warning] %>
  </div>
<% end %>
<% if flash[:danger] %>
  <div class="alert alert-danger mt-4" role="alert">
    <%= flash[:danger] %>
  </div>
<% end %>
